{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React Boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "yarn run build && node server.js",
    "test": "cross-env NODE_ENV=test karma start",
    "test:watch": "cross-env NODE_ENV=testing karma start --single-run=false",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --content-base public/ --progress --colors",
    "build": "cross-env NODE_ENV=production webpack",
    "prebuild": "flow && npm run test",
    "flow": "flow",
    "setup": "npm install -g yarn && yarn install && flow-typed install",
    "update-flow-typed": "flow-typed install"
  },
  "author": "Mayank Gupta",
  "dependencies": {
    "express": "^4.16.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^3.0.2",
    "redux": "^3.7.2",
    "redux-mock-store": "^1.3.0",
    "redux-socket.io": "^1.4.0",
    "redux-thunk": "^2.2.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^7.1.0",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "compression-webpack-plugin": "^0.3.2",
    "concurrently": "^3.4.0",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.4",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "extract-text-webpack-plugin": "2.1.2",
    "flow": "^0.2.3",
    "flow-bin": "0.45.0",
    "flow-typed": "^2.1.2",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.5",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "script-loader": "^0.7.0",
    "sinon": "^4.1.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.6.2",
    "webpack": "^2.6.0",
    "webpack-dev-server": "^2.5.1"
  }
}
